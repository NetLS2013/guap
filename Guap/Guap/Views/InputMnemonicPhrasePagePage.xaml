<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guap.Views.InputMnemonicPhrasePagePage"
             xmlns:customRender="clr-namespace:Guap.CustomRender;assembly=Guap">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#ffffff">
            <StackLayout Margin="30" VerticalOptions="FillAndExpand">
                <Label FontSize="24" FontAttributes="Bold" TextColor="Black" Margin="0,0,0,10">Mnemonic phrase</Label>
                <Label Text="Enter your mnenonic phrase below to create your wallet."></Label>
                <customRender:BorderEditor VerticalOptions="FillAndExpand"/>
               
            </StackLayout>
            <StackLayout Orientation="Horizontal" BackgroundColor="#e0bc0c" VerticalOptions="EndAndExpand" Padding="16,0,16,0">
                <Button Text="Decline" BackgroundColor="#e0bc0c" TextColor="#ffffff" FontSize="20"></Button>
                <Button Text="Accept" BackgroundColor="#e0bc0c" TextColor="#ffffff" HorizontalOptions="EndAndExpand" FontSize="20"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
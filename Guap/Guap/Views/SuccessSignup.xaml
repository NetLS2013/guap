<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customRender="clr-namespace:Guap.CustomRender;assembly=Guap"
             x:Class="Guap.Views.SuccessSignup">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
           
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
                <Image Source="logo.png" Margin="0, 0, 0, 60" />
                <customRender:LineHeightLabel x:Name="Message" TextColor="#fff" FontSize="18"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" BackgroundColor="#e0bc0c" VerticalOptions="EndAndExpand" Padding="16,0,16,0">
                <Button Clicked="OpenPageNewUserClick" Text="Continue" BackgroundColor="#e0bc0c" TextColor="#ffffff" HorizontalOptions="EndAndExpand" FontSize="20"></Button>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>